/* 巅峰榜 */
.peak{
    margin: 50rpx 0 30rpx;
    padding: 0 20rpx;
    overflow: hidden;
}
.peak_title{
    font-size: 35rpx;
}
/* 字体样式 */
.icon-slide-right{
    font-size: 20rpx;
    font-weight: 600;
}
.icon-bofang{
    font-size: 20rpx;
    margin-right: 10rpx;
}

.soar{
    display: flex;
    margin-top: 35rpx;
    background-color: #F2F2F2;
    border-radius: 20rpx;
    overflow: hidden;
}
.soar_item{
    flex: 2;
    padding: 18rpx 20rpx 0;

}
.soar_item view{
    width: 400rpx;
    overflow: hidden;
    white-space:nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.soar_item text{
    font-size: 26rpx;
    padding-bottom: 10rpx;
}
.soar_item view text:nth-child(2){
   
    color: #797979;
}
.soar_item .soar_item_title{
    font-size: 34rpx;
   
}
.soar_img{
    flex: 1;
    position: relative;
    overflow: hidden;
}
.soar_img image{
    display: block;
}
.soar_img view{
    position: absolute;
    right:5rpx;
    bottom: 0rpx;
    color: rgb(250, 250, 250);
    font-size: 22rpx;
    padding: 5rpx 25rpx;
    text-align: center;
    background-color: rgba(0,0,0,.5);
    border-radius: 20rpx;
}
.play{
    position: fixed;
    z-index: 1;
    display: flex;
    width: 100vw;
    height: 95rpx;
    background-color: #FAFAFA;
    box-shadow: 0px 0px 4px rgba(0,0,0,.2);
    bottom: 0;
    padding:0 20rpx;
    align-items: center;
}
.play_img{
    flex: 1;
}
.play_img image{
    width: 80%;
    border-radius: 50rpx;
}
.play_name{
    flex: 4;
    font-size: 28rpx;
}
.play_button{
    flex: 2;
    text-align: center;
}
.play_button text{
    font-size: 60rpx;
    margin-right: 20rpx;
    z-index: 100;
    color: #22D59C;
}


.animation{
    animation: play  3s infinite linear;
  }
  @keyframes play {
      0% {
          transform: rotate(0)
      }
     100%{
        transform: rotate(360deg)
     }
  }