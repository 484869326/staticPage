page{
    background-color: rgb(250, 250, 250);
}
.search{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    margin: 20rpx 40rpx;
    border-radius: 50rpx;
    color: #B3B3B3;
}
.icon-sousuo{
    padding: 10rpx 0;
    font-size: 36rpx;
    font-weight: 600;
}
.search text{
    font-size: 30rpx;
    font-weight: 100;
}
.recommend{
    padding: 0 20rpx;
}
.recommend_wrap{
    margin-top: 50rpx;
    overflow: hidden;
}
.recommend_title{
    float: left;
    margin-bottom: 20rpx;
    font-size: 32rpx;
}
.recommend_more{
    float: right;
    color: #8A8A8A;
    font-size: 24rpx;
}
.recommend_list{
    display: flex;
    margin-top: 20rpx;
    align-items: center;
}
.recommend_list_left{
    flex: 2;
}
.recommend_list_left image{
    width: 100%;
    border-radius: 15rpx;
}
.recommend_list_center{
    flex: 7;
    padding-left: 20rpx;
}
.recommend_list_title{
    font-size: 34rpx;
}
.recommend_plain{
    margin-top: 5rpx;
    font-size: 26rpx;
    color:#8A8A8A;
  }
  .recommend_plain text{
      font-size: 16rpx;
      color: #EAC272;
      margin-right: 10rpx;
      padding: 0 4rpx;
      border-radius: 5rpx;
      border: 1px solid #EAC272;
  }
.recommend_list_right{
    flex: 1;
    text-align: center;
    transform: translateY(-50%);
}
.hot{
    overflow: hidden;
    padding: 0 20rpx;
}
.hot_wrap{
    margin-top: 50rpx;
    overflow: hidden;
}
.hot_title{
    float: left;
    font-size: 32rpx;
}
.hot_more{
    float: right;
    color: #8A8A8A;
    font-size: 24rpx;
}
.hot_list_content{
    text-align: center;
    width: 33.33%;
    white-space: normal;
    margin-top: 30rpx;
    margin-right: 20rpx;
    display: inline-block;
    font-size: 28rpx;
}
.hot_list{
    width: 100%;
    white-space: nowrap;
}
.hot_list_image{
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: 28rpx;
}
.hot_list_image view{
    position: absolute;
    right:0rpx;
    bottom: 10rpx;
    color: rgb(250, 250, 250);
    font-size: 22rpx;
    padding: 5rpx 25rpx;
    text-align: center;
    background-color: rgba(0,0,0,.5);
    border-radius: 20rpx;
}

